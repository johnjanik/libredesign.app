{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DesignLibre",
  "version": "0.1.0",
  "identifier": "com.designlibre.designlibre",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "DesignLibre",
        "width": 1400,
        "height": 900,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "transparent": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data: blob:; script-src 'self' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; connect-src 'self' https://api.anthropic.com https://*.anthropic.com"
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all",
    "category": "public.app-category.graphics-design",
    "shortDescription": "Open-source vector design tool",
    "longDescription": "DesignLibre is a distributed, GPU-accelerated vector CAD system - an open-source alternative to Figma.",
    "macOS": {
      "minimumSystemVersion": "11.0",
      "signingIdentity": null,
      "entitlements": "./entitlements.plist",
      "dmg": {
        "appPosition": { "x": 180, "y": 170 },
        "applicationFolderPosition": { "x": 480, "y": 170 },
        "windowSize": { "width": 660, "height": 400 }
      }
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      },
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libgtk-3-0", "libayatana-appindicator3-1"],
        "section": "graphics",
        "priority": "optional"
      },
      "rpm": {
        "release": "1"
      }
    }
  },
  "plugins": {}

}

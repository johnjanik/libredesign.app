{
  "$schema": "https://designlibre.app/schemas/tokens-v1.json",
  "version": "1.0.0",

  "$metadata": {
    "type": "shadow",
    "name": "Shadows",
    "description": "Elevation and shadow tokens for depth and layering",
    "createdAt": "2025-06-15T10:30:00Z",
    "updatedAt": "2026-01-03T14:22:00Z"
  },

  "tokens": {
    "elevation": {
      "$description": "Elevation levels using layered shadows for realistic depth",

      "none": {
        "$type": "shadow",
        "$value": {
          "offsetX": "0px",
          "offsetY": "0px",
          "blur": "0px",
          "spread": "0px",
          "color": "rgba(0, 0, 0, 0)"
        },
        "$description": "No shadow"
      },

      "xs": {
        "$type": "shadow",
        "$value": {
          "offsetX": "0px",
          "offsetY": "1px",
          "blur": "2px",
          "spread": "0px",
          "color": "rgba(0, 0, 0, 0.05)"
        },
        "$description": "Extra small shadow (subtle)"
      },

      "sm": {
        "$type": "shadow",
        "$value": [
          {
            "offsetX": "0px",
            "offsetY": "1px",
            "blur": "3px",
            "spread": "0px",
            "color": "rgba(0, 0, 0, 0.1)"
          },
          {
            "offsetX": "0px",
            "offsetY": "1px",
            "blur": "2px",
            "spread": "-1px",
            "color": "rgba(0, 0, 0, 0.1)"
          }
        ],
        "$description": "Small shadow"
      },

      "md": {
        "$type": "shadow",
        "$value": [
          {
            "offsetX": "0px",
            "offsetY": "4px",
            "blur": "6px",
            "spread": "-1px",
            "color": "rgba(0, 0, 0, 0.1)"
          },
          {
            "offsetX": "0px",
            "offsetY": "2px",
            "blur": "4px",
            "spread": "-2px",
            "color": "rgba(0, 0, 0, 0.1)"
          }
        ],
        "$description": "Medium shadow (default elevated)"
      },

      "lg": {
        "$type": "shadow",
        "$value": [
          {
            "offsetX": "0px",
            "offsetY": "10px",
            "blur": "15px",
            "spread": "-3px",
            "color": "rgba(0, 0, 0, 0.1)"
          },
          {
            "offsetX": "0px",
            "offsetY": "4px",
            "blur": "6px",
            "spread": "-4px",
            "color": "rgba(0, 0, 0, 0.1)"
          }
        ],
        "$description": "Large shadow"
      },

      "xl": {
        "$type": "shadow",
        "$value": [
          {
            "offsetX": "0px",
            "offsetY": "20px",
            "blur": "25px",
            "spread": "-5px",
            "color": "rgba(0, 0, 0, 0.1)"
          },
          {
            "offsetX": "0px",
            "offsetY": "8px",
            "blur": "10px",
            "spread": "-6px",
            "color": "rgba(0, 0, 0, 0.1)"
          }
        ],
        "$description": "Extra large shadow"
      },

      "2xl": {
        "$type": "shadow",
        "$value": {
          "offsetX": "0px",
          "offsetY": "25px",
          "blur": "50px",
          "spread": "-12px",
          "color": "rgba(0, 0, 0, 0.25)"
        },
        "$description": "2x large shadow (modals, popovers)"
      }
    },

    "inner": {
      "$description": "Inner shadows for inset effects",

      "sm": {
        "$type": "shadow",
        "$value": {
          "type": "innerShadow",
          "offsetX": "0px",
          "offsetY": "1px",
          "blur": "2px",
          "spread": "0px",
          "color": "rgba(0, 0, 0, 0.05)"
        },
        "$description": "Small inner shadow"
      },

      "md": {
        "$type": "shadow",
        "$value": {
          "type": "innerShadow",
          "offsetX": "0px",
          "offsetY": "2px",
          "blur": "4px",
          "spread": "0px",
          "color": "rgba(0, 0, 0, 0.06)"
        },
        "$description": "Medium inner shadow"
      }
    },

    "colored": {
      "$description": "Colored shadows for emphasis",

      "primary": {
        "$type": "shadow",
        "$value": {
          "offsetX": "0px",
          "offsetY": "4px",
          "blur": "14px",
          "spread": "-3px",
          "color": "rgba(33, 150, 243, 0.4)"
        },
        "$description": "Primary brand colored shadow"
      },

      "success": {
        "$type": "shadow",
        "$value": {
          "offsetX": "0px",
          "offsetY": "4px",
          "blur": "14px",
          "spread": "-3px",
          "color": "rgba(76, 175, 80, 0.4)"
        },
        "$description": "Success colored shadow"
      },

      "error": {
        "$type": "shadow",
        "$value": {
          "offsetX": "0px",
          "offsetY": "4px",
          "blur": "14px",
          "spread": "-3px",
          "color": "rgba(244, 67, 54, 0.4)"
        },
        "$description": "Error colored shadow"
      }
    },

    "component": {
      "$description": "Component-specific shadows",

      "button": {
        "default": {
          "$type": "shadow",
          "$value": "{elevation.sm}"
        },
        "hover": {
          "$type": "shadow",
          "$value": "{elevation.md}"
        },
        "active": {
          "$type": "shadow",
          "$value": "{elevation.xs}"
        }
      },

      "card": {
        "default": {
          "$type": "shadow",
          "$value": "{elevation.sm}"
        },
        "hover": {
          "$type": "shadow",
          "$value": "{elevation.lg}"
        }
      },

      "modal": {
        "$type": "shadow",
        "$value": "{elevation.2xl}"
      },

      "dropdown": {
        "$type": "shadow",
        "$value": "{elevation.lg}"
      },

      "tooltip": {
        "$type": "shadow",
        "$value": "{elevation.md}"
      },

      "input": {
        "focus": {
          "$type": "shadow",
          "$value": [
            {
              "offsetX": "0px",
              "offsetY": "0px",
              "blur": "0px",
              "spread": "3px",
              "color": "rgba(33, 150, 243, 0.2)"
            }
          ],
          "$description": "Input focus ring shadow"
        }
      }
    }
  }
}

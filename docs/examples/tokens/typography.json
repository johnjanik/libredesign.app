{
  "$schema": "https://designlibre.app/schemas/tokens-v1.json",
  "version": "1.0.0",

  "$metadata": {
    "type": "typography",
    "name": "Typography",
    "description": "Typography tokens including font families, sizes, and composite text styles",
    "createdAt": "2025-06-15T10:30:00Z",
    "updatedAt": "2026-01-03T14:22:00Z"
  },

  "tokens": {
    "fontFamily": {
      "$description": "Font family stacks",

      "sans": {
        "$type": "fontFamily",
        "$value": ["Inter", "system-ui", "-apple-system", "sans-serif"],
        "$description": "Primary sans-serif font"
      },
      "serif": {
        "$type": "fontFamily",
        "$value": ["Merriweather", "Georgia", "serif"],
        "$description": "Serif font for long-form content"
      },
      "mono": {
        "$type": "fontFamily",
        "$value": ["JetBrains Mono", "Fira Code", "Consolas", "monospace"],
        "$description": "Monospace font for code"
      }
    },

    "fontWeight": {
      "$description": "Font weight values",

      "light": {
        "$type": "fontWeight",
        "$value": 300
      },
      "regular": {
        "$type": "fontWeight",
        "$value": 400
      },
      "medium": {
        "$type": "fontWeight",
        "$value": 500
      },
      "semibold": {
        "$type": "fontWeight",
        "$value": 600
      },
      "bold": {
        "$type": "fontWeight",
        "$value": 700
      },
      "extrabold": {
        "$type": "fontWeight",
        "$value": 800
      }
    },

    "fontSize": {
      "$description": "Font size scale",

      "xs": {
        "$type": "dimension",
        "$value": "12px",
        "$description": "Extra small (captions)"
      },
      "sm": {
        "$type": "dimension",
        "$value": "14px",
        "$description": "Small (secondary text)"
      },
      "base": {
        "$type": "dimension",
        "$value": "16px",
        "$description": "Base body text"
      },
      "lg": {
        "$type": "dimension",
        "$value": "18px",
        "$description": "Large body text"
      },
      "xl": {
        "$type": "dimension",
        "$value": "20px"
      },
      "2xl": {
        "$type": "dimension",
        "$value": "24px"
      },
      "3xl": {
        "$type": "dimension",
        "$value": "30px"
      },
      "4xl": {
        "$type": "dimension",
        "$value": "36px"
      },
      "5xl": {
        "$type": "dimension",
        "$value": "48px"
      },
      "6xl": {
        "$type": "dimension",
        "$value": "60px"
      },
      "7xl": {
        "$type": "dimension",
        "$value": "72px"
      }
    },

    "lineHeight": {
      "$description": "Line height scale",

      "none": {
        "$type": "number",
        "$value": 1
      },
      "tight": {
        "$type": "number",
        "$value": 1.25
      },
      "snug": {
        "$type": "number",
        "$value": 1.375
      },
      "normal": {
        "$type": "number",
        "$value": 1.5
      },
      "relaxed": {
        "$type": "number",
        "$value": 1.625
      },
      "loose": {
        "$type": "number",
        "$value": 2
      }
    },

    "letterSpacing": {
      "$description": "Letter spacing scale",

      "tighter": {
        "$type": "dimension",
        "$value": "-0.05em"
      },
      "tight": {
        "$type": "dimension",
        "$value": "-0.025em"
      },
      "normal": {
        "$type": "dimension",
        "$value": "0em"
      },
      "wide": {
        "$type": "dimension",
        "$value": "0.025em"
      },
      "wider": {
        "$type": "dimension",
        "$value": "0.05em"
      },
      "widest": {
        "$type": "dimension",
        "$value": "0.1em"
      }
    },

    "heading": {
      "$description": "Heading text styles",

      "h1": {
        "$type": "typography",
        "$value": {
          "fontFamily": "{fontFamily.sans}",
          "fontSize": "{fontSize.5xl}",
          "fontWeight": 700,
          "lineHeight": 1.1,
          "letterSpacing": "{letterSpacing.tight}"
        },
        "$description": "Page title"
      },
      "h2": {
        "$type": "typography",
        "$value": {
          "fontFamily": "{fontFamily.sans}",
          "fontSize": "{fontSize.4xl}",
          "fontWeight": 700,
          "lineHeight": 1.2,
          "letterSpacing": "{letterSpacing.tight}"
        },
        "$description": "Section heading"
      },
      "h3": {
        "$type": "typography",
        "$value": {
          "fontFamily": "{fontFamily.sans}",
          "fontSize": "{fontSize.3xl}",
          "fontWeight": 600,
          "lineHeight": 1.25
        },
        "$description": "Subsection heading"
      },
      "h4": {
        "$type": "typography",
        "$value": {
          "fontFamily": "{fontFamily.sans}",
          "fontSize": "{fontSize.2xl}",
          "fontWeight": 600,
          "lineHeight": 1.3
        }
      },
      "h5": {
        "$type": "typography",
        "$value": {
          "fontFamily": "{fontFamily.sans}",
          "fontSize": "{fontSize.xl}",
          "fontWeight": 600,
          "lineHeight": 1.4
        }
      },
      "h6": {
        "$type": "typography",
        "$value": {
          "fontFamily": "{fontFamily.sans}",
          "fontSize": "{fontSize.lg}",
          "fontWeight": 600,
          "lineHeight": 1.4
        }
      }
    },

    "body": {
      "$description": "Body text styles",

      "lg": {
        "$type": "typography",
        "$value": {
          "fontFamily": "{fontFamily.sans}",
          "fontSize": "{fontSize.lg}",
          "fontWeight": 400,
          "lineHeight": 1.6
        },
        "$description": "Large body text"
      },
      "base": {
        "$type": "typography",
        "$value": {
          "fontFamily": "{fontFamily.sans}",
          "fontSize": "{fontSize.base}",
          "fontWeight": 400,
          "lineHeight": 1.5
        },
        "$description": "Default body text"
      },
      "sm": {
        "$type": "typography",
        "$value": {
          "fontFamily": "{fontFamily.sans}",
          "fontSize": "{fontSize.sm}",
          "fontWeight": 400,
          "lineHeight": 1.5
        },
        "$description": "Small body text"
      }
    },

    "label": {
      "$description": "UI label styles",

      "lg": {
        "$type": "typography",
        "$value": {
          "fontFamily": "{fontFamily.sans}",
          "fontSize": "{fontSize.base}",
          "fontWeight": 500,
          "lineHeight": 1.4
        }
      },
      "base": {
        "$type": "typography",
        "$value": {
          "fontFamily": "{fontFamily.sans}",
          "fontSize": "{fontSize.sm}",
          "fontWeight": 500,
          "lineHeight": 1.4
        },
        "$description": "Default label"
      },
      "sm": {
        "$type": "typography",
        "$value": {
          "fontFamily": "{fontFamily.sans}",
          "fontSize": "{fontSize.xs}",
          "fontWeight": 500,
          "lineHeight": 1.4,
          "letterSpacing": "{letterSpacing.wide}"
        }
      }
    },

    "caption": {
      "$type": "typography",
      "$value": {
        "fontFamily": "{fontFamily.sans}",
        "fontSize": "{fontSize.xs}",
        "fontWeight": 400,
        "lineHeight": 1.4
      },
      "$description": "Caption and helper text"
    },

    "overline": {
      "$type": "typography",
      "$value": {
        "fontFamily": "{fontFamily.sans}",
        "fontSize": "{fontSize.xs}",
        "fontWeight": 600,
        "lineHeight": 1.4,
        "letterSpacing": "{letterSpacing.widest}",
        "textTransform": "uppercase"
      },
      "$description": "Overline text"
    },

    "code": {
      "$description": "Code text styles",

      "inline": {
        "$type": "typography",
        "$value": {
          "fontFamily": "{fontFamily.mono}",
          "fontSize": "0.875em",
          "fontWeight": 400,
          "lineHeight": 1.4
        },
        "$description": "Inline code"
      },
      "block": {
        "$type": "typography",
        "$value": {
          "fontFamily": "{fontFamily.mono}",
          "fontSize": "{fontSize.sm}",
          "fontWeight": 400,
          "lineHeight": 1.6
        },
        "$description": "Code blocks"
      }
    }
  }
}
